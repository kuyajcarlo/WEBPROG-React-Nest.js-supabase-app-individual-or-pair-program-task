{
  "version": 2,
  "builds": [
    { "src": "guestbook-app/backend/package.json", "use": "@vercel/node" },
    { "src": "guestbook-app/frontend/package.json", "use": "@vercel/static-build" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "guestbook-app/backend/main.js" },
    { "source": "/(.*)", "destination": "guestbook-app/frontend/index.html" }
  ]
}