{
  "version": 2,
  "builds": [
    {
      "src": "guestbook-app/backend/api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "guestbook-app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/guestbook-app/backend/api/index.ts" },
    { "source": "/(.*)", "destination": "/guestbook-app/frontend/$1" }
  ]
}